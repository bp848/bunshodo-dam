# Application Configuration
NODE_ENV=development # or production
NEXT_PUBLIC_BASE_URL=http://localhost:3000 # Your application base URL
NEXT_PUBLIC_UPLOAD_URL=http://localhost:3000/api/uploadthing # Your upload endpoint
SITE_URL=http://localhost:3000 # Your site URL
PURCHASE_CODE=your-purchase-code # Your FileKit purchase code

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/filekit # Your database URL

# Email Configuration
SMTP_HOST=smtp.example.com # Your SMTP host
SMTP_PORT=587 # Your SMTP port
SMTP_USER=your-smtp-username # Your SMTP username
SMTP_PASSWORD=your-smtp-password # Your SMTP password
SMTP_FROM_EMAIL=no-reply@example.com # Your sender email

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id # From Google Cloud Console
GOOGLE_CLIENT_SECRET=your-google-client-secret # From Google Cloud Console
GOOGLE_REDIRECT_URI=http://localhost:3000/login/google/callback # Your OAuth callback URL

# File Storage Configuration (Choose either AWS S3 OR Cloudflare R2)

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
BUCKET_NAME=your-s3-bucket-name
AWS_REGION=your-aws-region
UPLOAD_URL=your-s3-upload-url

# Cloudflare R2 Configuration (Optional)
NEXT_PUBLIC_CLOUDFLARE_URL=your-cloudflare-url # e.g., https://pub-xxx.r2.dev
CLOUDFLARE_ENDPOINT=your-cloudflare-endpoint # e.g., https://xxx.r2.cloudflarestorage.com
CLOUDFLARE_ACCESS_KEY_ID=your-cloudflare-access-key
CLOUDFLARE_SECRET_ACCESS_KEY=your-cloudflare-secret-key
R2_BUCKET_NAME=your-r2-bucket-name

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=your-stripe-public-key # Stripe publishable key
STRIPE_SECRET_KEY=your-stripe-secret-key # Stripe secret key
STRIPE_WEBHOOKS_SECRET=your-stripe-webhook-secret # Stripe webhook secret

# reCAPTCHA Configuration
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key # Google reCAPTCHA site key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key # Google reCAPTCHA secret key

# Application Settings
NEXT_PUBLIC_APP_NAME=FileKit # Your application name
NEXT_PUBLIC_ENABLE_TEAMS=true # Enable/disable teams feature

# Mailchimp Configuration (Optional)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_API_SERVER=your-mailchimp-server # e.g., us21
MAILCHIMP_AUDIENCE_ID=your-mailchimp-audience-id

# AI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key
NEXT_PUBLIC_ENABLE_AI=true

# Claude Configuration (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key
NEXT_PUBLIC_ENABLE_CLAUDE=true

# Google AI Configuration (Optional)
GEMINI_API_KEY=your-gemini-api-key
NEXT_PUBLIC_ENABLE_GEMINI=true
GOOGLE_CLOUD_API_KEY=your-google-cloud-credentials.json
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key

# AI Studio Configuration (Optional)
NEXT_PUBLIC_ENABLE_AI_STUDIO=true
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key
NEXT_PUBLIC_AI_STUDIO_URL=http://localhost:3000/api/ai-studio
